<p id="notice"><%= notice %></p>

<h1>Lista de Torres</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Portero</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @towers.each do |tower| %>
      <tr>
        <td><%= tower.name %></td>
        <td><%= tower.watchman %></td>
        <td><%= link_to 'Mostrar', tower %></td>
        <td><%= link_to 'Editar', edit_tower_path(tower) %></td>
        <td><%= link_to 'Eliminar', tower, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Torre', new_tower_path %>
<%= link_to 'Volver', root_path %>